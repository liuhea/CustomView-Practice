<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liuhe.aidlclient.MainActivity">

    <Button
        android:id="@+id/btn_main_bind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="bind Service"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_main_call"
        android:layout_width="129dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:text="call Service"
        app:layout_constraintEnd_toEndOf="@+id/btn_main_bind"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btn_main_bind"
        app:layout_constraintTop_toBottomOf="@+id/btn_main_bind" />
</android.support.constraint.ConstraintLayout>
